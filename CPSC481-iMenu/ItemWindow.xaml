                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Image x:Name="image" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Stretch="UniformToFill" Source="/ChummyJoes.png" />

            </Grid>-->

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="4*" />
                </Grid.ColumnDefinitions>

                <!--<TextBlock Grid.Column="0" Text="Descripton here abcdefghi jklmnopqr stuvwxyz 123456" VerticalAlignment="Center" Margin="0,0,0,0" FontSize="12" TextWrapping="Wrap"/>-->
                <Image Grid.Column="0" x:Name="DairyFreeSymbol" Source="/DairyFree2.png" Margin="4,5,4,5"/>
                <Image Grid.Column="1" Name="PeanutFreeSymbol" Source="/PeanutFree2.png" Margin="4,5,4,5"/>


            </Grid>
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1" Content="-" FontSize="22" Margin="10,10,218,46"/>
                <TextBlock Grid.Column="1" FontSize="18" HorizontalAlignment="Center" Text="1" VerticalAlignment="Top" Margin="0,18,0,0"/>
                <Button Grid.Column="1" Content="+" FontSize="22" Margin="218,10,10,46"/>
                <TextBlock Grid.Column="2" FontSize="18" HorizontalAlignment="Center" Text="$21.00" VerticalAlignment="Top" Margin="0,18,0,0"/>
                <Button Grid.Column="1" Content="Add" FontSize="22" Margin="10,56,10,0"/>
            </Grid>

        </Grid>
    </Grid>
