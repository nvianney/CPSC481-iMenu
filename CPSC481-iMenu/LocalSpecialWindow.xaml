        <Border Grid.Row="0" Background="#FFEFECD4" CornerRadius="10" Padding="20" Margin="12">
            <TextBlock x:Name='title' FontSize="30" TextWrapping="Wrap" FontWeight="Bold">
            <Run Text="Special Dishes Local To Canada" />
            </TextBlock>
        </Border>
        <Button x:Name="exit" Grid.Row="0" Content="X" Background="#FFE86464" FontSize="20" VerticalAlignment="Top" Height="39" Click="exit_Click" Margin="590,12,12,0" />

        <Grid Grid.Row="1" Margin="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
