<Window x:Class="CPSC481_iMenu.LocalSpecialWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CPSC481_iMenu"
        mc:Ignorable="d"
        Title="LocalSpecialWindow" Height ="7in" Width="7in">
    <Grid Background="White" Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="83*" />
            <RowDefinition Height="57*" />
            <RowDefinition Height="176*" />
            <RowDefinition Height="235*" />
            <RowDefinition Height="81*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" x:Name='ItemTitle' Text="Special Dishes Local to Canada" VerticalAlignment="Center" FontSize="30" TextWrapping="Wrap" FontWeight="Bold" Height="40" HorizontalAlignment="Center" Width="441"/>
            <Button x:Name="exit" Grid.Column="0" Content="X" Background="#FFE86464" FontSize="20" HorizontalAlignment="Right" Width="44" Height="39" Click="exit_Click" VerticalAlignment="Top" />

        </Grid>
        <Grid Grid.Row="1" Margin="0,5,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" x:Name='Special1Title' Text="Poutine" VerticalAlignment="Top" FontSize="25" TextWrapping="Wrap" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Grid.Column="1" x:Name='Special2Title' Text="Nanaimo Bars" VerticalAlignment="Top" FontSize="25" TextWrapping="Wrap" FontWeight="Bold" HorizontalAlignment="Center"/>
        </Grid>
        <Grid Grid.Row="2" Margin="0,4,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Image  Grid.Column="0" x:Name="Special1" Source="/food_images/poutine.jpg"/>
            <Image Grid.Column="1" x:Name="Special2" Source="/food_images/NanaimoBars.jpg" />
        </Grid>
        <Grid Grid.Row="3" Margin="0,4,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" TextWrapping="Wrap" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,6,10,0" >
            <Run Text="Poutine originates in Quebec and typically consists of french fries, cheese curds, and gravy."/>
            <Run Language="en-ca" Text=" "/>
            <Run Text="It is considered a quintessential Canadian food and is popular across the country."/><LineBreak/><LineBreak/>
            <Run Text="The simple yet delicious combination of flavors and textures has made it a beloved comfort food and an iconic symbol of Canadian cuisine."/>
            </TextBlock>

            <TextBlock Grid.Column="1" TextWrapping="Wrap" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,6,0,0" >
            <Run Text="Nanaimo bars are a no-bake dessert that originated in the city of Nanaimo, British Columbia, Canada."/><Run Language="en-ca" Text=" "/><Run Text="They consist of a chocolate crumb base, a custard-flavored filling, and a chocolate ganache topping."/><LineBreak/><LineBreak/><Run Text="The bars are considered a classic Canadian treat and have become a popular dessert across the country."/>
            </TextBlock>
        </Grid>
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Each special for only $6!" VerticalAlignment="Center" FontSize="30" TextWrapping="Wrap" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#FFE86464"/>
        </Grid>

        <!--<Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
