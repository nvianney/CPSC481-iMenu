<Window x:Class="CPSC481_iMenu.DietaryRestrictionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CPSC481_iMenu"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="DietaryRestrictionsWindow" Height="450" Width="800">

    <Grid>
        <Image HorizontalAlignment="Left" Height="212" VerticalAlignment="Top" Width="217" Source="/Image1.png" />
        <Label Content="Select your dietary restrictions:" FontFamily="Segoe UI Light" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <ListView x:Name="DietaryRestrictionsListView" SelectionMode="Multiple" RenderTransformOrigin="0.5,0.5" HorizontalContentAlignment="Center" Padding="10,10,10,10" HorizontalAlignment="Center" VerticalAlignment="Top" BorderBrush="{x:Null}" d:ItemsSource="{d:SampleData ItemCount=6}" ScrollViewer.VerticalScrollBarVisibility="Disabled" Width="218" SelectionChanged="DietaryRestrictionsListView_SelectionChanged" Height="305" Margin="0,52,0,0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Image Height="40" Width="40" Source="/Image1.png" />
                        <TextBlock Text="{Binding}" FontSize="18" FontFamily="Segoe UI Light" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Content="Show Menu" HorizontalAlignment="Center" Margin="0,362,0,0" VerticalAlignment="Top" FontSize="20" FontFamily="Segoe UI Light" Style="{StaticResource ButtonStyle}" Padding="10,10,10,10" Width="180" Height="50" Click="Button_Click"/>
    </Grid>
</Window>
