<Window x:Class="CPSC481_iMenu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CPSC481_iMenu"
        mc:Ignorable="d"
        Title="Menu Window" Height="9in" Width="10in">
    <!-- Landscape view: 10in x 9in -->

    <Grid>
        <Grid.RowDefinitions>
            <!-- First element sizing -->
            <RowDefinition Height = "65" />
            <!-- Second element sizing -->
            <RowDefinition Height = "*" />
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Grid Grid.Row="0" Background="#FFF99494">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <Image Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Stretch" Source="/Image1.png" />

            <TextBlock Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Table No. 05" FontSize="22" FontWeight="Bold" />

            <!--<Button Grid.Column="2" Margin="16,8,16,8" BorderBrush="#FFED5353" BorderThickness="5,5,5,5" Background="White">-->
            <Button Grid.Column="2" Margin="16,8,16,8" Click="Call_Server_Button_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/call server bell.png" Margin="0,0,4,0" />
                    <TextBlock Text="Call Server" VerticalAlignment="Center" FontSize="36" FontWeight="Bold" Margin="4,0,0,0" />
                </StackPanel>
            </Button>

        </Grid>
        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="300" />
            </Grid.ColumnDefinitions>

            <!-- Left pane -->
            <Grid Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Options bar-->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="60" />
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Column="0" Background="AliceBlue">
                        <Button Name="StartersButton" Background="White" Margin="0,0,0,0" BorderBrush="#312E5F" BorderThickness="1" Click="Sidebar_Button_Click">
                            <Image Height="80" Source="/sidebar/starter.png" Stretch="Fill" />
                        </Button>
                        <Button Name="MainsButton" Background="White" Margin="0,0,0,0" BorderBrush="#312E5F" BorderThickness="1" Click="Sidebar_Button_Click">
                            <Image Height="80" Source="/sidebar/main.png" Stretch="Fill"/>
                        </Button>
                        <Button Name="SidesButton" Background="White" Margin="0,0,0,0" BorderBrush="#312E5F" BorderThickness="1" Click="Sidebar_Button_Click">
                            <Image Height="80" Source="/sidebar/sides.png" Stretch="Fill"/>
                        </Button>
                        <Button Name="DrinksButton" Background="White" Margin="0,0,0,0" BorderBrush="#312E5F" BorderThickness="1" Click="Sidebar_Button_Click">
                            <Image Height="80" Source="/sidebar/drink.png" Stretch="Fill"/>
                        </Button>
                        <Button Name="DessertsButton" Background="White" Margin="0,0,0,0" BorderBrush="#312E5F" BorderThickness="1" Click="Sidebar_Button_Click">
                            <Image Height="80" Source="/sidebar/dessert.png" Stretch="Fill" />
                        </Button>
                        <Button Name="SepcialsButton" Background="White" Margin="0,0,0,0" BorderBrush="#312E5F" BorderThickness="1" Click="Sidebar_Button_Click">
                            <Image Height="80" Source="/sidebar/special.png" Stretch="Fill" />
                        </Button>
                    </StackPanel>
                    <!-- Instead of having a bar at the buttom to display the legend I made a box on the corner-->
                    <Button Width="60" Content="?" FontSize="40" FontWeight="Bold" Background="#FFE86464" Margin="0,713,0,0" Grid.RowSpan="2" Click="Help_Button_Click" Height="60" VerticalAlignment="Top"/>
                </Grid>

                <!-- Menu -->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="50" />
                    </Grid.RowDefinitions>
                    <ScrollViewer Grid.Column="1" Grid.Row="0">
                        <StackPanel Background="#FFE4E4E4">
                            <Grid >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0" Grid.Row="0" Width="95" Height="70">
                                    <Button Name="VegetarianButton" Margin ="3" Style="{StaticResource FilterItemStyle}" Click="Filter_Button_Click"/>
                                    <Image Source="allergy_images/Vegetarian.png" Height="55" Width="55" IsHitTestVisible="False"/>
                                </Grid>

                                <Grid Grid.Column="1" Grid.Row="0" Width="95" Height="70">
                                    <Button Name="VeganButton" Margin ="3" Style="{StaticResource FilterItemStyle}" Click="Filter_Button_Click"/>
                                    <Image Source="allergy_images/Vegan.png" Height="50" IsHitTestVisible="False"/>
                                </Grid>

                                <Grid Grid.Column="2" Grid.Row="0" Width="95" Height="70">
                                    <Button Name="GlutenFreeButton" Margin ="3" Style="{StaticResource FilterItemStyle}" Click="Filter_Button_Click"/>
                                    <Image Source="allergy_images/gluten free.png" Height="50" IsHitTestVisible="False"/>
                                </Grid>

                                <Grid Grid.Column="3" Grid.Row="0" Width="95" Height="70">
                                    <Button Name="DairyFreeButton" Margin ="3" Style="{StaticResource FilterItemStyle}" Click="Filter_Button_Click"/>
                                    <Image Source="allergy_images/dairy free.png" Height="50" IsHitTestVisible="False"/>
                                </Grid>

                                <Grid Grid.Column="4" Grid.Row="0" Width="95" Height="70">
                                    <Button Name="NutFreeButton" Margin ="3" Style="{StaticResource FilterItemStyle}" Click="Filter_Button_Click"/>
                                    <Image Source="allergy_images/nut pree.png" Height="50" IsHitTestVisible="False"/>
                                </Grid>

                                <Grid Grid.Column="5" Grid.Row="0" Width="95" Height="70">
                                    <Button Name="SeafoodFreeButton" Margin ="3" Style="{StaticResource FilterItemStyle}" Click="Filter_Button_Click"/>
                                    <Image Source="allergy_images/Seafood.png" Height="50" IsHitTestVisible="False"/>
                                </Grid>

                            </Grid>
                            <ItemsControl Name="menuList">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Columns="2" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>

                                        <local:MenuItem Id="{Binding itemId}" Title="{Binding name}" Description="{Binding description}" ImagePath="{Binding imageName}" />

                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <TextBlock Name="NoResultsMessage" TextWrapping="Wrap" Text="No results match your filtering criteria." HorizontalAlignment="Center" Margin="0,16,0,-6" FontWeight="Bold" FontSize="18"/>

                        </StackPanel>
                    </ScrollViewer>
                    <Button x:Name="btn_legend" FontSize="18" Background="WhiteSmoke" Click="btn_legend_Click" Margin="388,0,0,0" Grid.RowSpan="2" HorizontalAlignment="Left" Width="202" Height="50" VerticalAlignment="Bottom" >
                        Legend
                    </Button>
                    <Button x:Name="btn_trackOrder" FontSize="18" Background="WhiteSmoke"  Margin="98,0,0,0" Grid.RowSpan="2" Click="btn_trackOrder_Click" HorizontalAlignment="Left" Width="202" Height="50" VerticalAlignment="Bottom" FontWeight="Bold" >
                        Track Order
                    </Button>
                </Grid>
            </Grid>

            <Grid Grid.Column="1" Background="#FFE6E6E6">
                <Grid.RowDefinitions>
                    <RowDefinition Height="90" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" FontSize="24" Text="Your order" FontWeight="Bold" Margin="24,0,0,8" VerticalAlignment="Bottom"/>
                <ScrollViewer Grid.Row="1">
                    <!--
                    <StackPanel>
                        <local:OrderItem />
                        <local:OrderItem />
                        <local:OrderItem />
                    </StackPanel>-->
                    <StackPanel>
                        <ItemsControl Name="orderList">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="1" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <local:OrderItem Id="{Binding itemId}" Quantity="{Binding quantity}" Height="200" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
                <Button x:Name="btn_order" Click="OrderButton_Click" Grid.Row="2" FontSize="23" FontWeight="Bold" Background="DarkGreen">
                    Place Order
                </Button>
            </Grid>
        </Grid>
        <Canvas Grid.Row="1" Visibility="Collapsed">
            <Rectangle Fill="#66000000" Canvas.Left="0" Canvas.Top="0" Canvas.Right="0" Canvas.Bottom="0" Width="960" Height="864"/>
            <Grid Canvas.Left="50" Canvas.Top="30" Background="White">
                <StackPanel Margin="16,16,16,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="40" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" FontSize="20" FontWeight="Bold">Tutorial</TextBlock>
                        <Button x:Name="exit" Grid.Column="1" Content="X" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,0" Background="#FFE86464" />
                    </Grid>

                    <TextBlock FontSize="18" Width="300" Height="150" TextWrapping="WrapWithOverflow" Margin="0,24,0,0">
                    Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec quis risus at urna tincidunt consectetur sit amet vel lacus. Donec turpis sapien, placerat et rutrum eu, dignissim et orci.
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Canvas>


        <Canvas Name="Help_Canvas_Intro" Grid.Row="1" Visibility="Collapsed">
            <Rectangle Fill="#66000000" Canvas.Left="0" Canvas.Top="0" Canvas.Right="0" Canvas.Bottom="0" Width="960" Height="864"/>
            <Grid Canvas.Left="50" Canvas.Top="30" Background="White" HorizontalAlignment="Center" Height="265" VerticalAlignment="Top">
