                    <Button x:Name="Change_language_button" Width="192" Height="40" Content="Change Language" FontSize="16" FontWeight="Bold" Background="#FFE86464" Click="Change_language_button_Click" />
                    <TextBlock></TextBlock>
                    <TextBlock FontSize="18" Width="300" Height="31" TextWrapping="WrapWithOverflow" Margin="0,24,0,0" HorizontalAlignment="Center">Disable/Enable Pop-ups</TextBlock>
                    <!--<Button x:Name="enable_pop_ups" Width="192" Height="40" Content="No, Keep the Pop-ups" FontSize="16" FontWeight="Bold" Background="#FFABED23" Click="" />-->
                    <!--<Button x:Name="disable_pop_ups" Width="192" Height="40" Content="Yes, Disable the Pop-ups" FontSize="16" FontWeight="Bold" Background="#FFE86464" Click="delete_confirmation_yes_button_Click" /> -->
