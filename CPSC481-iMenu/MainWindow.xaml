<Window x:Class="CPSC481_iMenu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CPSC481_iMenu"
        mc:Ignorable="d"
        Title="iMenu - Restaurant Ordering System" Height ="9in" Width="10in">
    <!-- Landscape view: 10in x 9in -->
    <Grid>
        <Grid.RowDefinitions>
            <!-- First element sizing -->
            <RowDefinition Height = "65" />
            <!-- Second element sizing -->
            <RowDefinition Height = "*" />
        </Grid.RowDefinitions>
        
        <!-- Toolbar -->
        <Grid Grid.Row="0" Background="#FFF99494">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            
            <Image Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Stretch" Source="/Image1.png" />

            <TextBlock Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Table No. 05" FontSize="22" FontWeight="Bold" />

            <Button Grid.Column="2" Margin="16,8,16,8">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/call server bell.png" Margin="0,0,4,0" />
                    <TextBlock Text="Call Server" VerticalAlignment="Center" FontSize="36" FontWeight="Bold" Margin="4,0,0,0" />
                </StackPanel>
            </Button>

        </Grid>
        
        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="300" />
            </Grid.ColumnDefinitions>

            <!-- Left pane -->
            <Grid Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Options bar-->
                <StackPanel Grid.Column="0" Background="#FFD8FFAB">
                    <Button Height="80" Margin="0,8,0,8">
                        <Image Height="80" Source="/sidebar/starter.png" />
                    </Button>
                    <Button Height="80" Margin="0,8,0,8" >
                        <Image Height="80" Source="/sidebar/main.png" />
                    </Button>
                    <Button Height="80" Margin="0,8,0,8" >
                        <Image Height="80" Source="/sidebar/drink.png" />
                    </Button>
                    <Button Height="80" Margin="0,8,0,8" >
                        <Image Height="80" Source="/sidebar/dessert.png" />
                    </Button>

                </StackPanel>

                <!-- Instead of having a bar at the buttom to display the legend I made a box on the corner-->
                <Button Grid.Column="0" Height="60" Width="60" RenderTransformOrigin="0.75,3.525" Margin="0,723,1,0" Content="?" FontSize="40" FontWeight="Bold" Background="#FFE86464"/>

                <!-- Menu -->
                <ScrollViewer Grid.Column="1">
                    <StackPanel Background="#FFE4E4E4">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="100" />
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="1" Height="40" Content="Filter" FontSize="20" />
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <local:MenuItem Grid.Column="0" />
                            <local:MenuItem Grid.Column="1" />
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <local:MenuItem Grid.Column="0" />
                            <local:MenuItem Grid.Column="1" />
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <local:MenuItem Grid.Column="0" />
                            <local:MenuItem Grid.Column="1" />
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <local:MenuItem Grid.Column="0" />
                            <local:MenuItem Grid.Column="1" />
                        </Grid>

                    </StackPanel>
                </ScrollViewer>
            </Grid>

            <Grid Grid.Column="1" Background="#FFE6E6E6">
                <Grid.RowDefinitions>
                    <RowDefinition Height="90" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" FontSize="24" Text="Your order" FontWeight="Bold" Margin="24,0,0,8" VerticalAlignment="Bottom"/>
                <ScrollViewer Grid.Row="1">
                    <StackPanel>
                        <local:OrderItem Loaded="OrderItem_Loaded" />
                        <local:OrderItem Loaded="OrderItem_Loaded" />
                        <local:OrderItem Loaded="OrderItem_Loaded" />
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</Window>
