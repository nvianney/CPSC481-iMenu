<Window x:Class="CPSC481_iMenu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CPSC481_iMenu"
        mc:Ignorable="d"
        Title="Menu Window" Height="9in" Width="10in">
    <!-- Landscape view: 10in x 9in -->

    <Grid>
        <Grid.RowDefinitions>
            <!-- First element sizing -->
            <RowDefinition Height = "65" />
            <!-- Second element sizing -->
            <RowDefinition Height = "*" />
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Grid Grid.Row="0" Background="#FFF99494">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <Image Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Stretch" Source="/Image1.png" />

            <TextBlock Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Table No. 05" FontSize="22" FontWeight="Bold" />

            <!--<Button Grid.Column="2" Margin="16,8,16,8" BorderBrush="#FFED5353" BorderThickness="5,5,5,5" Background="White">-->
            <Button Name ="Call_Server_Button" Grid.Column="2" Margin="16,8,16,8" Click="Call_Server_Button_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/call server bell.png" Margin="0,0,4,0" />
                    <TextBlock Text="Call Server" VerticalAlignment="Center" FontSize="36" FontWeight="Bold" Margin="4,0,0,0" />
                </StackPanel>
            </Button>

        </Grid>
        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="300" />
            </Grid.ColumnDefinitions>

            <!-- Left pane -->
            <Grid Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Options bar-->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="60" />
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Column="0" Background="#FFD8FFAB">
                        <Button Height="80" Margin="0,8,0,8">
                            <Image Height="80" Source="/sidebar/starter.png" />
                        </Button>
                        <Button Height="80" Margin="0,8,0,8" >
                            <Image Height="80" Source="/sidebar/main.png" />
                        </Button>
                        <Button Height="80" Margin="0,8,0,8" >
                            <Image Height="80" Source="/sidebar/drink.png" />
                        </Button>
                        <Button Height="80" Margin="0,8,0,8" >
                            <Image Height="80" Source="/sidebar/dessert.png" />
                        </Button>
                    </StackPanel>
                    <!-- Instead of having a bar at the buttom to display the legend I made a box on the corner-->
                    <Button Grid.Row="1" Height="60" Width="60" Content="?" FontSize="40" FontWeight="Bold" Background="#FFE86464" />
                </Grid>

                <!-- Menu -->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="50" />
                    </Grid.RowDefinitions>
                    <ScrollViewer Grid.Column="1" Grid.Row="0" >
                        <StackPanel Background="#FFE4E4E4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="100" />
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="1" Height="40" Content="Filter" FontSize="20" />
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <local:MenuItem Grid.Column="0" />
                                <local:MenuItem Grid.Column="1" />
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <local:MenuItem Grid.Column="0" />
                                <local:MenuItem Grid.Column="1" />
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <local:MenuItem Grid.Column="0" />
                                <local:MenuItem Grid.Column="1" />
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <local:MenuItem Grid.Column="0" />
                                <local:MenuItem Grid.Column="1" />
                            </Grid>

                        </StackPanel>
                    </ScrollViewer>
                    <Button x:Name="btn_legend" FontSize="18" Grid.Row="1" Background="WhiteSmoke" Click="btn_legend_Click" >
                        Legend
                    </Button>
                </Grid>
            </Grid>

            <Grid Grid.Column="1" Background="#FFF5CFCF" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="90" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" FontSize="24" Text="Your order" FontWeight="Bold" Margin="24,0,0,8" VerticalAlignment="Bottom"/>
                <ScrollViewer Grid.Row="1">
                    <StackPanel Height="1355">
                        <local:OrderItem x:Name="OrderItem1" RenderTransformOrigin="0.806,0.524" />
                        <local:GlutenFreeOrderItem x:Name="Your_Order_GlutenFree_Item"/>
                        <local:OrderItem x:Name="OrderItem2"/>
                        <local:OrderItem x:Name="OrderItem3"/>
                        <local:OrderItem x:Name="OrderItem4"/>
                        <local:OrderItem x:Name="OrderItem5"/>
                    </StackPanel>
                </ScrollViewer>
                <Button x:Name="btn_order" Click="OrderButton_Click" Grid.Row="2" FontSize="23" FontWeight="Bold" Background="DarkGreen">
                    Place Order
                </Button>
            </Grid>

        </Grid>
        <Canvas Grid.Row="1" Visibility="Collapsed">
            <Rectangle Fill="#66000000" Canvas.Left="0" Canvas.Top="0" Canvas.Right="0" Canvas.Bottom="0" Width="960" Height="864"/>
            <Grid Canvas.Left="50" Canvas.Top="30" Background="White">
                <StackPanel Margin="16,16,16,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="40" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" FontSize="20" FontWeight="Bold">Tutorial</TextBlock>
                        <Button x:Name="exit" Grid.Column="1" Content="X" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,0" Background="#FFE86464" />
                    </Grid>

                    <TextBlock FontSize="18" Width="300" Height="150" TextWrapping="WrapWithOverflow" Margin="0,24,0,0">
                    Lorem ipsum sdaf sit amet, consectetur adipiscing elit. Donec quis risus at urna tincidunt consectetur sit amet vel lacus. Donec turpis sapien, placerat et rutrum eu, dignissim et orci.
                    </TextBlock>
                </StackPanel>
            </Grid>

        </Canvas>

        <!-- Delete confirmation canvas, blanks out the remaining screeen shows option to keep the item or delete the item-->
        <Canvas Name="delete_confirmation_canvas" Grid.Row="1" Visibility="Collapsed">
            <Rectangle Fill="#66000000" Canvas.Left="0" Canvas.Top="0" Canvas.Right="0" Canvas.Bottom="0" Width="960" Height="864"/>
            <Grid Canvas.Left="314" Canvas.Top="275" Background="White" Height="262" Width="334">
                <StackPanel Margin="16,16,16,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="40" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" FontSize="20" FontWeight="Bold">Delete Confirmation</TextBlock>
                        <Button x:Name="delete_confirmation_close" Grid.Column="1" Content="X" VerticalAlignment="Bottom" Background="#FFE86464" Height="27" Click="delete_confirmation_close_Click" />
                    </Grid>

                    <TextBlock FontSize="18" Width="300" Height="70" TextWrapping="WrapWithOverflow" Margin="0,24,0,0" HorizontalAlignment="Center"><Run Text="You are about to delete the selected Item."/><LineBreak/><LineBreak/><LineBreak/></TextBlock>
                    <Button x:Name="delete_confirmation_no_button" Width="192" Height="40" Content="No, Keep the Item" FontSize="16" FontWeight="Bold" Background="#FFABED23" Click="delete_confirmation_no_button_Click" />
                    <TextBlock></TextBlock>
                    <Button x:Name="delete_confirmation_yes_button" Width="192" Height="40" Content="Yes, Delete the Item" FontSize="16" FontWeight="Bold" Background="#FFE86464" Click="delete_confirmation_yes_button_Click" />
                </StackPanel>
            </Grid>
        </Canvas>
        
        <!-- pop-up for when sever button is pressed -->
        <Canvas Name="call_server_canvas" Grid.Row="1" Visibility="Collapsed">
            <Rectangle Fill="#66000000" Canvas.Left="0" Canvas.Top="0" Canvas.Right="0" Canvas.Bottom="0" Width="960" Height="864"/>
            <Grid Canvas.Left="314" Canvas.Top="275" Background="White" Height="262" Width="334">
                <StackPanel Margin="16,16,16,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="40" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" FontSize="20" FontWeight="Bold">Call Server</TextBlock>
                        <Button x:Name="call_server_X_button" Grid.Column="1" Content="X" VerticalAlignment="Bottom" Background="#FFE86464" Height="27" Click="call_server_close_Click" />
                    </Grid>

                    <TextBlock FontSize="18" Width="300" Height="70" TextWrapping="WrapWithOverflow" Margin="0,24,0,0" HorizontalAlignment="Center"><Run Text="A server is coming to help.           Please wait!"/><LineBreak/><LineBreak/><LineBreak/></TextBlock>
                    <TextBlock></TextBlock>
                    <Button x:Name="call_server_cancel_button" Width="192" Height="40" Content="Cancel Request" FontSize="16" FontWeight="Bold" Background="#FFE86464" Click="call_server_cancel_button_Click" />
                    <TextBlock></TextBlock>
                    <!--<TextBlock HorizontalAlignment="Center">This dialog will close in 5 seconds.</TextBlock> -->
                </StackPanel>
            </Grid>
        </Canvas>


    </Grid>
</Window>
