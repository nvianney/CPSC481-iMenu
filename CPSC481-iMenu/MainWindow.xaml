<Window x:Class="CPSC481_iMenu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CPSC481_iMenu"
        mc:Ignorable="d"
        Title="iMenu - Restaurant Ordering System" Height ="9in" Width="10in">
    <!-- Landscape view: 10in x 9in -->
    <Grid>
        <Button Content="Call Server" Margin="724,10,10,0" VerticalAlignment="Top" Height="68" Click="Call_Server_Button_Click" AutomationProperties.HelpText="Click to call Server" FontSize="36" FontWeight="Bold"/>
        <Image HorizontalAlignment="Left" Height="100" Margin="158,121,0,0" VerticalAlignment="Top" Width="100"/>
        <Image x:Name="iMenu_Image" HorizontalAlignment="Left" Height="180" Margin="10,10,0,0" VerticalAlignment="Top" Width="233" Source="/Image1.png"/>
        <Label x:Name="Table_Number1" Content="Table No. 05" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="59" Width="144" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20"/>
        <Label x:Name="Call_Server_Label" Content="" HorizontalAlignment="Right" Margin="641,83,0,0" VerticalAlignment="Top" Width="309" FontSize="18" Height="38" HorizontalContentAlignment="Right"/>
        <Label Content="XYZ Restaurant" Margin="670,121,0,0" VerticalAlignment="Top" Height="62" FontSize="36" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" HorizontalAlignment="Left" Width="262"/>
        <ListBox d:ItemsSource="{d:SampleData ItemCount=80}" Margin="651,189,10,126" FontSize="18"/>
        <Button x:Name="Place_Order_Button" Content="Place Order" Margin="724,744,10,0" VerticalAlignment="Top" Height="68" Click="Place_Order_Button_Click" AutomationProperties.HelpText="Click to Place Order" FontSize="36" FontWeight="Bold"/>
        <Rectangle HorizontalAlignment="Left" Height="623" Margin="10,189,0,0" Stroke="Black" VerticalAlignment="Top" Width="636" StrokeThickness="3"/>
    </Grid>
</Window>
