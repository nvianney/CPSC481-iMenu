<Window x:Class="CPSC481_iMenu.PlaceOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CPSC481_iMenu"
        mc:Ignorable="d"
        Title="iMenu - Place Order" Height ="9in" Width="7in">
    <Grid>
        <Image x:Name="iMenu_Image" HorizontalAlignment="Left" Height="160" Margin="10,10,0,0" VerticalAlignment="Top" Width="170" Source="/Image1.png"/>
        <Label Content="Order Confirmation" HorizontalAlignment="Center" Margin="0,153,0,0" VerticalAlignment="Top" Height="56" Width="332" FontSize="36" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button x:Name="Call_Server_Button" Margin="436,10,10,0" VerticalAlignment="Top" Height="68" Click="Call_Server_Button_Click" AutomationProperties.HelpText="Click to call Server" FontSize="36" FontWeight="Bold" Content="    Call Server"/>
        <Label x:Name="Table_Number1" Content="Table No. 05" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="59" Width="144" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20"/>
        <Label x:Name="Call_Server_Label" Content="" HorizontalAlignment="Right" VerticalAlignment="Top" Width="309" FontSize="18" Height="38" Margin="0,78,10,0" HorizontalContentAlignment="Right"/>
        <Rectangle HorizontalAlignment="Center" Height="380" Margin="0,206,0,0" Stroke="Black" VerticalAlignment="Top" Width="652" StrokeThickness="3"/>
        <Button x:Name="Go_Back" Content="&lt;-- Go Back" HorizontalAlignment="Left" Margin="10,161,0,0" VerticalAlignment="Top" Height="40" Width="155" FontSize="24" FontWeight="Bold" Click="Go_Back_Button_Click"/>
        <CheckBox x:Name="Confirmation_Checkbox" Content="Check this box if you have made sure&#xD;&#xA;that items in our order list are correct&#xD;&#xA;and you are aware of any allergy it&#xD;&#xA;may contains." Margin="10,632,0,0" VerticalAlignment="Top" Height="93" Width="326" HorizontalAlignment="Left" FontSize="18" Checked="Confirmation_Checkbox_Checked" Background="#FFFBF8F8" IsChecked="False"/>
        <Button Name ="Place_Order_Button" Content="Place Order" Margin="446,648,0,0" FontSize="35" FontWeight="Bold" Click="Place_Order_Button_Click" Opacity="0.4" Height="60" VerticalAlignment="Top" HorizontalAlignment="Left" Width="206" Background="#FFF79F9F" IsEnabled="False" Cursor="" ToolTip="Check the checkbox to enable this button"/>
        <Label x:Name="Place_Order_Label" Content="" HorizontalAlignment="Right" VerticalAlignment="Top" Width="309" FontSize="18" Height="29" Margin="0,713,10,0" HorizontalContentAlignment="Right"/>
        <Image HorizontalAlignment="Left" Height="37" Margin="440,26,0,0" VerticalAlignment="Top" Width="40" Source="/call server bell.png"/>
        <Grid Margin="10,209,10,262" ShowGridLines="True" >
            <Grid.RowDefinitions>
                <RowDefinition Height="36.354"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="181*" ToolTip="Food Items"/>
                <ColumnDefinition Width="88*" ToolTip="Quantity"/>
                <ColumnDefinition Width="57*" ToolTip="Total Cost"/>
            </Grid.ColumnDefinitions>
            <Label Content="Food Item Name" HorizontalAlignment="Center" VerticalAlignment="Top" Width="134" FontSize="16" Height="31" AutomationProperties.IsColumnHeader="True"/>
            <Label Content="Quantity" HorizontalAlignment="Center" VerticalAlignment="Top" Width="72" Grid.Column="1" FontSize="16" Height="31" AutomationProperties.IsColumnHeader="True"/>
            <Label Content="Cost" HorizontalAlignment="Center" VerticalAlignment="Top" Width="46" Grid.Column="2" FontSize="16" Height="31"/>


            <Button x:Name="Add_Item_1" Grid.Column="1" Content="ADD +" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="1" VerticalAlignment="Center" Height="26" Width="60" Click="Add_Item_1_Click"/>
            <Button x:Name="Del_Item_1" Grid.Column="1" Content="DEL -" HorizontalAlignment="Left" Margin="106,0,0,0" Grid.Row="1" VerticalAlignment="Center" Height="26" Width="60" Click="Button_Click"/>
            <ScrollBar Grid.Column="2" HorizontalAlignment="Left" Margin="97,0,0,0" VerticalAlignment="Top" Height="373" Grid.RowSpan="5" Width="17"/>
            <Label x:Name="Food_Item_1_Quantity" Grid.Column="1" Content="9" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" FontSize="14" Background="#FFF5F3F3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderThickness="2" BorderBrush="Black" Height="32" Width="22"/>
            <Label x:Name="Food_Item_1_Cost" Grid.Column="2" Content="$" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Center" Height="26" Width="94" Margin="12,0,0,0" FontSize="14"/>
        </Grid>
        <!-- This is Place order sub-window -->

    </Grid>
</Window>
