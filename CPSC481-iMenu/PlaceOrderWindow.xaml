<Window x:Class="CPSC481_iMenu.PlaceOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CPSC481_iMenu"
        mc:Ignorable="d"
        Title="iMenu - Place Order" Height ="8in" Width="7in">
    <Grid>
        <Image x:Name="iMenu_Image" HorizontalAlignment="Left" Height="160" Margin="10,10,0,0" VerticalAlignment="Top" Width="170" Source="/Image1.png"/>
        <Label Content="Order Confirmation" HorizontalAlignment="Center" Margin="0,116,0,0" VerticalAlignment="Top" Height="90" Width="332" FontSize="36" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button x:Name="Call_Server_Button" Margin="436,10,10,0" VerticalAlignment="Top" Height="68" Click="Call_Server_Button_Click" AutomationProperties.HelpText="Click to call Server" FontSize="36" FontWeight="Bold" Content="Call Server"/>
        <Label x:Name="Table_Number1" Content="Table No. 05" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="59" Width="144" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20"/>
        <Label x:Name="Call_Server_Label" Content="" HorizontalAlignment="Right" VerticalAlignment="Top" Width="309" FontSize="18" Height="38" Margin="0,78,10,0" HorizontalContentAlignment="Right"/>
        <Rectangle HorizontalAlignment="Center" Height="536" Margin="0,206,0,0" Stroke="Black" VerticalAlignment="Top" Width="652" StrokeThickness="3"/>
        <Button x:Name="Go_Back" Content="Go Back" HorizontalAlignment="Left" Margin="10,161,0,0" VerticalAlignment="Top" Height="40" Width="155" FontSize="24" FontWeight="Bold" Click="Go_Back_Button_Click"/>
        <!-- This is Place order sub-window -->

    </Grid>
</Window>
