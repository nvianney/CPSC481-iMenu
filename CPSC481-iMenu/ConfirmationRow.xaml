<UserControl x:Class="CPSC481_iMenu.ConfirmationRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CPSC481_iMenu"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600" Background="White" Margin="0,8,0,8">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="0.5*" />
        </Grid.ColumnDefinitions>
        
        <Image x:Name="image" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Source="/ChummyJoes.png" Margin="8,8,8,8" />
        <TextBlock Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18"><Run Language="en-ca" Text="Fish"/><Run Text=" Burger"/></TextBlock>
        <TextBlock Grid.Column="2" Text="$25.00*5=$125.00" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18"/>
        <Button x:Name="exit" Grid.Column="4" Content="X" Background="#FFE86464" VerticalAlignment="Center" HorizontalAlignment="Center" Width="30" Height="30" />


    </Grid>
</UserControl>
